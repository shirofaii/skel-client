{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost",
            "webRoot": "${workspaceRoot}/build"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Chrome",
            "url": "http://localhost",
            "port": 80,
            "webRoot": "${workspaceRoot}/build"
        }
    ]
}